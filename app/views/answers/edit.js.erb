$('.answer-errors').html('<%= render 'shared/errors', resource: @answer %>');

<% if !@answer.errors.present? %>
  document.getElementById('<%= dom_id(@answer) %>').insertAdjacentHTML('afterend', "<%= j render 'form', answer: @answer %>");
  document.getElementById('<%= dom_id(@answer) %>').style.display = "none";
<% end %>